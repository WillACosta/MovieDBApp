<?xml version="1.0" encoding="utf-8"?>

<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.will.moviedbapp.ui.fragments.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">

        <argument
            android:name="showBottomNavigationBar"
            android:defaultValue="true" />
        <action
            android:id="@+id/action_homeFragment_to_mediaDetails"
            app:destination="@id/mediaDetails" />
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.will.moviedbapp.ui.fragments.SettingsFragment"
        android:label="SettingsFragment"
        tools:layout="@layout/fragment_settings">

        <argument
            android:name="showBottomNavigationBar"
            android:defaultValue="true" />
    </fragment>

    <fragment
        android:id="@+id/mediaDetails"
        android:name="com.will.moviedbapp.ui.fragments.MediaDetails"
        android:label="MediaDetails"
        tools:layout="@layout/fragment_media_details" />

    <fragment
        android:id="@+id/nameFragment"
        android:name="com.will.moviedbapp.ui.fragments.NameFragment"
        android:label="NameFragment"
        tools:layout="@layout/fragment_name">

        <action
            android:id="@+id/action_nameFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.will.moviedbapp.ui.fragments.WelcomeFragment"
        android:label="WelcomeFragment"
        tools:layout="@layout/fragment_welcome">

        <action
            android:id="@+id/action_welcomeFragment_to_nameFragment"
            app:destination="@id/nameFragment" />
        <action
            android:id="@+id/action_welcomeFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

</navigation>
